<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--   <TextView-->
            <!--       android:layout_marginTop="20dp"-->
            <!--            android:id="@+id/textView8"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--android:paddingLeft="10dp"-->
            <!--            android:text="Select Category"-->
            <!--            android:textColor="@color/colorblack"-->
            <!--            android:textSize="14sp"-->

            <!--  />-->






            <Spinner
                android:layout_marginTop="10dp"
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />





            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputentertitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name Of Association"
                android:textColorHint="@color/colorblack"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:layout_marginTop="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_nameofassociation"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>





            <LinearLayout
                android:layout_marginTop="20dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="10dp"
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"

                    android:text="Logo Of Association"
                    android:textColor="@color/colorblack"
                    android:textSize="16sp"

                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/addpicture"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"

                    android:src="@drawable/addimgicon"
                    />

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recviewimg"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


            <LinearLayout
                android:layout_marginTop="20dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:text="Banner For Association"
                    android:textColor="@color/colorblack"
                    android:textSize="16sp"

                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/addpicture2"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"

                    android:src="@drawable/addimgicon"
                    />

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recviewimg2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputaboutpot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="About Pot"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:textColorHint="@color/colorblack"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_abtpot"
                    android:textSize="14sp"
                    android:inputType="text"

                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>






            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputwoe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Website Of Association"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:textColorHint="@color/colorblack"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_woe"
                    android:textSize="14sp"
                    android:inputType="text"

                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:id="@+id/separation1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="18dp"
                android:scaleType="fitCenter"
                app:tint="@color/colorblack" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputbankaccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bank Account Number"
                android:textColorHint="@color/colorblack"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:layout_marginTop="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_bankaccount"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:padding="10dp"
                android:layout_marginTop="20dp"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:textColorHint="@color/colorblack"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorblack"
                android:hint="Subcribe Newsletter for mission?"
                />

            <RadioGroup
                android:id="@+id/publishRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/all_radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:textColor="@color/colorblack" />

                <RadioButton
                    android:id="@+id/contact_radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No"
                    android:textColor="@color/colorblack" />


            </RadioGroup>
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="18dp"
                android:scaleType="fitCenter"
                app:tint="@color/colorblack" />


            <Button
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="20sp"
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorred"
                android:textColor="@color/colorWhite"
                android:text="NEXT"
                android:padding="12dp"
                android:textAllCaps="true"
                />







        </LinearLayout>
    </ScrollView>
</LinearLayout>


