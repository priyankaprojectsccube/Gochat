<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView

                android:textSize="14sp"
                android:hint="  Search"
                android:padding="10dp"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:id="@+id/search"
                android:background="@drawable/removebackground"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"></TextView>

            <TextView
                android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/quantum_black_text"
            android:layout_margin="15dp"
            android:text="My Pot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            </TextView>

            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/potstaticimg"
                android:layout_width="match_parent"
                android:layout_height="150dp"></ImageView>


            <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/quantum_black_text"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:text="Create Pot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/quantum_black_text"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/startnow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorGray"
                android:gravity="center"
                android:padding="10dp"
                android:text="START NOW"
                android:textColor="@color/quantum_black_text"
                android:textSize="16sp" />

            <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/quantum_black_text"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:text="Recent Pots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:id="@+id/recvewrecentpots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/quantum_black_text"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:text="My Pots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/recvewmypots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


