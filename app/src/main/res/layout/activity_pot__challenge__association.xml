            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputentertitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter title"
                android:textColorHint="@color/colorblack"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:layout_marginTop="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_entertitle"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputshortdec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Short Description"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:textColorHint="@color/colorblack"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_shortdec"
                    android:textSize="14sp"
                    android:inputType="text"

                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputaboutpot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="About Pot"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:textColorHint="@color/colorblack"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_abtpot"
                    android:textSize="14sp"
                    android:inputType="text"

                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
<LinearLayout
    android:layout_marginTop="20dp"
    android:weightSum="2"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:padding="10dp"
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:layout_height="wrap_content"

        android:text="Event Banner"
        android:textColor="@color/colorblack"
        android:textSize="16sp"

       />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/addpicture"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="25dp"
android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"

        android:src="@drawable/addimgicon"
        />

</LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recviewimg"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInputdob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dobname_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:drawableRight="@drawable/ic_calender"
                    android:editable="false"
                    android:focusable="false"
                    android:textColorHint="@color/colorblack"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    android:hint="Date Of Event"
                    android:textSize="17sp" />
            </com.google.android.material.textfield.TextInputLayout>





            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputwoe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Website Of Event (Optional)"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:textColorHint="@color/colorblack"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_woe"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:padding="10dp"
                android:layout_marginTop="20dp"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:textColorHint="@color/colorblack"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorblack"
                android:hint="Are you creating your Pot?"
           />

            <RadioGroup
                android:id="@+id/publishRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
               >

                <RadioButton
                    android:id="@+id/all_radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:textColor="@color/colorblack" />

                <RadioButton
                    android:id="@+id/contact_radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No"
                    android:textColor="@color/colorblack" />


            </RadioGroup>
            <ImageView
                android:id="@+id/separation1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="18dp"
                android:scaleType="fitCenter"
                app:tint="@color/colorblack" />




            <Button
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="20sp"
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorred"
                android:textColor="@color/colorWhite"
                android:text="NEXT"
                android:padding="12dp"
                android:textAllCaps="true"
                />







        </LinearLayout>
    </ScrollView>
</LinearLayout>


