<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:background="@color/colorWhite"

        android:id="@+id/advrelimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/c1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <androidx.cardview.widget.CardView
                android:layout_margin="15dp"

                android:id="@+id/category_cardview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="20dp"
                tools:ignore="MissingConstraints">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <ImageView

                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_launcher"
                        />
                </RelativeLayout>



            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_margin="15dp"
            android:id="@+id/l1"
            android:layout_below="@+id/c1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/potname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/quantum_black_text"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/closepot"
                android:textSize="14sp"
             android:gravity="center"
               android:background="@color/quantum_grey"
                android:text="Close My Pot"
                android:textColor="@color/quantum_black_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:padding="5dp" />


        </LinearLayout>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/des"
            android:ellipsize="end"
            android:textColor="@color/colorblack"
            android:textSize="16sp"
            android:text=""
            android:maxLines="3"
            android:layout_below="@id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:id="@+id/l2"
            android:layout_margin="15dp"
            android:layout_below="@id/des"
android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView

                android:drawablePadding="15dp"
                android:gravity="center"
                android:id="@+id/invite"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:textColor="@color/quantum_black_text"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="INVITE"
                android:background="@color/quantum_grey50"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>




            <TextView
                android:background="@color/quantum_grey50"
                android:layout_marginLeft="10dp"
                android:id="@+id/share"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:textColor="@color/colorblack"
                android:text="SHARE"
                android:textStyle="bold"
          android:gravity="center"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_below="@id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
       android:layout_marginLeft="40dp"
                android:layout_marginRight="30dp"
      android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/raiseof"
                  android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textColor="@color/quantum_black_text"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>


            <SeekBar

                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </SeekBar>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/raisedby"
                    android:gravity="center_horizontal"
                    android:textSize="16sp"
                    android:textColor="@color/quantum_black_text"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>


            </LinearLayout>

            <TextView
                android:background="@color/colorred"
                android:layout_marginTop="20dp"
                android:id="@+id/contribute"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textColor="@color/quantum_black_text"
                android:text="Contribute"
                android:padding="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content">

            </TextView>
            <TableRow
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/l2"
                android:id="@+id/hr"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorblack"></TableRow>

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:text="About"
                android:textColor="@color/quantum_black_text"
                android:textSize="16sp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:id="@+id/about"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="15dp"
                android:ellipsize="end"
                android:textColor="@color/colorblack"
                android:textSize="16sp"
                android:text=""
                android:maxLines="4"
                android:layout_below="@id/l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

    </RelativeLayout>


</ScrollView>



</LinearLayout>