<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/default_profile"/>

         <LinearLayout
             android:weightSum="3"

             android:layout_width="match_parent"
            android:layout_height="90dp"
             android:orientation="horizontal"
             >
             <LinearLayout
                 android:orientation="vertical"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="match_parent">
                 <TextView
                     android:id="@+id/my_challenges_count"
                     android:textColor="@color/quantum_black_text"
                     android:textSize="14sp"
                     android:textStyle="bold"
                     android:text=""
                     android:gravity="center"
                     android:layout_gravity="center"
                     android:layout_weight="0.5"
                     android:layout_width="match_parent"
                     android:layout_height="0dp"/>
                 <TextView
                   android:gravity="center_horizontal"
                     android:layout_gravity="center"
                     android:textColor="@color/quantum_black_text"
                     android:textSize="15sp"
                     android:text="Publication"
                     android:layout_weight="0.5"
                     android:layout_width="match_parent"
                     android:layout_height="0dp"/>
             </LinearLayout>
             <LinearLayout
                 android:orientation="vertical"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="match_parent">
                 <TextView
                     android:id="@+id/my_accpet_challenges_count"
                     android:textColor="@color/quantum_black_text"
                     android:textSize="14sp"
                     android:textStyle="bold"
                     android:text=""
                     android:gravity="center"
                     android:layout_gravity="center"
                     android:layout_weight="0.5"
                     android:layout_width="match_parent"
                     android:layout_height="0dp"/>
                 <TextView
                     android:gravity="center_horizontal"
                     android:layout_gravity="center"
                     android:textColor="@color/quantum_black_text"
                     android:textSize="15sp"
                     android:text="Abonnes"
                     android:layout_weight="0.5"
                     android:layout_width="match_parent"
                     android:layout_height="0dp"/>
             </LinearLayout>
             <LinearLayout
                 android:orientation="vertical"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="match_parent">
                 <TextView
                     android:id="@+id/my_pot_count"
                     android:textColor="@color/quantum_black_text"
                     android:textSize="14sp"
                     android:textStyle="bold"
                     android:text=""
                     android:gravity="center"
                     android:layout_gravity="center"
                     android:layout_weight="0.5"
                     android:layout_width="match_parent"
                     android:layout_height="0dp"/>
                 <TextView
                     android:gravity="center_horizontal"
                     android:layout_gravity="center"
                     android:textColor="@color/quantum_black_text"
                     android:textSize="15sp"
                     android:text="Abonnement"
                     android:layout_weight="0.5"
                     android:layout_width="match_parent"
                     android:layout_height="0dp"/>
             </LinearLayout>
         </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:textStyle="bold"
            android:textColor="@color/quantum_black_text"
            android:textSize="18sp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:visibility="gone"
       android:id="@+id/des"
            android:textColor="@color/quantum_black_text"
            android:textSize="18sp"
            android:text="dec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:weightSum="4"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:background="@drawable/removebackground"
            android:textSize="15sp"
            android:textColor="@color/quantum_black_text"
            android:text="S`abonner"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"></TextView>
        <TextView
            android:layout_marginLeft="10dp"
            android:background="@drawable/removebackground"
            android:textSize="15sp"
            android:textColor="@color/quantum_black_text"
            android:text="E`crire"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </TextView>
        <TextView
            android:layout_marginLeft="10dp"
            android:background="@drawable/removebackground"
            android:textSize="15sp"
            android:textColor="@color/quantum_black_text"
            android:text="Adresse"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"></TextView>
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="@color/quantum_black_text"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"></TextView>
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:layout_marginTop="10dp"
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabIconTint="@color/your_color_selector"
        app:tabIndicatorColor="@color/quantum_black_text"
        app:tabGravity="fill"/>





    <androidx.viewpager.widget.ViewPager

        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />

</LinearLayout>
    </ScrollView>



</LinearLayout>