<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"

    android:orientation="vertical">

   <LinearLayout
 android:visibility="gone"
       android:id="@+id/firstreply"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
    <LinearLayout

        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/replyprofilepic"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/default_profile"
            />

        <LinearLayout

            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/replypersonname"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/quantum_black_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/replypersoncmt"
                android:textSize="18sp"

                android:textColor="@color/quantum_black_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/likecount"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/quantum_grey"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/like"
            android:textSize="14sp"
            android:textColor="@color/main_blue_color"
            android:text=" Like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/reply"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/main_blue_color"
            android:text="Reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>


    </LinearLayout>


    <!--        </androidx.constraintlayout.widget.ConstraintLayout>-->

    <!--    </androidx.cardview.widget.CardView>-->


   </LinearLayout>


    <LinearLayout

        android:id="@+id/otherreply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout


        android:layout_marginLeft="70dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"

            android:id="@+id/replyprofilepic1"
            android:textSize="14sp"
            android:src="@drawable/default_profile"
            android:textColor="@color/main_blue_color"
            android:text="Like"
            android:layout_width="25dp"
            android:layout_height="25dp">

        </de.hdodenhof.circleimageview.CircleImageView>



            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/replypersonname1"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"

                android:textColor="@color/quantum_black_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

    </LinearLayout>
        <LinearLayout


            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"

                android:visibility="invisible"
                android:textSize="14sp"
                android:src="@drawable/default_profile"
                android:textColor="@color/main_blue_color"
                android:text="Like"
                android:layout_width="25dp"
                android:layout_height="25dp">

            </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"

            android:id="@+id/replypersoncmt1"
            android:textSize="14sp"

            android:layout_marginLeft="10dp"
            android:textColor="@color/quantum_black_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"

                android:visibility="invisible"
                android:textSize="14sp"
                android:src="@drawable/default_profile"
                android:textColor="@color/main_blue_color"
                android:text="Like"
                android:layout_width="25dp"
                android:layout_height="25dp">

            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:id="@+id/likecount1"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/quantum_grey"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/like1"
                android:textSize="14sp"
                android:textColor="@color/main_blue_color"
                android:text=" Like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/reply1"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/main_blue_color"
                android:text="Reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>